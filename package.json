{
  "name": "chatter-infra",
  "version": "0.1.0",
  "bin": {
    "chatter-infra": "bin/chatter-infra.js"
  },
  "scripts": {
    "clean": "tsc --build --clean",
    "build": "npm run clean && npx tsc",
    "watch": "npm run clean && npx tsc -w",
    "lint": "npx eslint --fix --ext .ts . && npx prettier --write src/",
    "check-lint": "npx eslint --fix --ext .ts . && npx prettier --check src/",
    "bootstrap": "cdk bootstrap",
    "synth": "cdk synth",
    "deploy": "cdk deploy"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "20.6.3",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "~5.2.2"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.167.1",
    "constructs": "^10.0.0",
    "dotenv": "^16.4.5",
    "envalid": "^8.0.0",
    "source-map-support": "^0.5.21"
  }
}
